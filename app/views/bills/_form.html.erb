<%= form_for @bill, html: { id: "new-bill-submit" }, remote: true do |f| %>
  <div class="small-12 medium-4 large-3 columns centered">
    <div class="small-12 columns">
      <%= f.label :nickname %>
      <%= f.text_field :nickname %>
    </div>
  </div>

  <div class="small-12 medium-4 large-3 columns centered">
    <div class="small-12 columns">
      <%= f.label :url %>
      <%= f.url_field :url %>
    </div>
  </div>

  <div class="small-12 medium-4 large-3 columns centered">
    <div class="small-12 columns">
      <%= f.label :start_due_date, "Starting Date" %>
      <%= f.text_field :start_due_date, as: :datepicker, id: "datepicker" %>
    </div>
  </div>

  <div class="small-12 medium-4 large-3 columns centered">
    <div class="small-12 columns">
      <%= f.label :recurring_amt, "Recurring Amount" %>
      <%= f.text_field :recurring_amt, placeholder: "0.00" %>
    </div>
  </div>

  <div class="small-12 medium-4 large-3 columns">
    <div class="small-12 columns">
      <%= f.label :one_time, "One Time" %>
      <%= f.check_box :one_time %>
    </div>
  </div>

  <div class="small-12 small-centered columns">
    <div>
      <%= f.submit "Submit" %>
    </div>
  </div>

<% end %>
